<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>

<plugin>

  <extension name="CloudCommandsLabel" point="org.eclipse.ui.commands">
      <category
            id="org.jkiss.dbeaver.cloud.git.commands.category"
            name="Cloud Category">
      </category>
      <command
            categoryId="org.jkiss.dbeaver.cloud.git.commands.category"
            id="org.jkiss.dbeaver.cloud.git.commands.cloudCommand"
            name="Cloud Command">
      </command>
      <command
            categoryId="org.jkiss.dbeaver.cloud.git.commands.category"
            id="org.jkiss.dbeaver.cloud.git.commands.pushCommand"
            name="Push Command">
      </command>      
   </extension>
  <extension point="org.eclipse.ui.handlers">
     <handler
           class="org.jkiss.dbeaver.cloud.git.handlers.CloudHandler"
           commandId="org.jkiss.dbeaver.cloud.git.commands.cloudCommand">
     </handler>
     <handler
           class="org.jkiss.dbeaver.cloud.git.handlers.PushHandler"
           commandId="org.jkiss.dbeaver.cloud.git.commands.pushCommand">
     </handler>
  </extension>
  <extension point="org.eclipse.ui.bindings">
     <key
           commandId="org.jkiss.dbeaver.cloud.git.commands.cloudCommand"
           contextId="org.eclipse.ui.contexts.window"
           schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
           sequence="M1+6">
     </key>
  </extension>
   <extension point="org.eclipse.ui.bindings">
     <key
           commandId="org.jkiss.dbeaver.cloud.git.commands.pushCommand"
           contextId="org.eclipse.ui.contexts.window"
           schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
           sequence="M1+7">
     </key>
  </extension>
  <extension point="org.eclipse.ui.menus">
     <menuContribution
           locationURI="menu:org.eclipse.ui.main.menu?after=additions">
        <menu
              id="org.jkiss.dbeaver.cloud.git.menus.cloudMenu"
              label="Cloud Menu"
              mnemonic="M">
           <command
                 commandId="org.jkiss.dbeaver.cloud.git.commands.cloudCommand"
                 id="org.jkiss.dbeaver.cloud.git.menus.cloudCommand"
                 mnemonic="S">
           </command>
           <command
                 commandId="org.jkiss.dbeaver.cloud.git.commands.pushCommand"
                 id="org.jkiss.dbeaver.cloud.git.menus.pushCommand"
                 mnemonic="S">
           </command>
        </menu>
     </menuContribution>
     <menuContribution locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
        <toolbar id="org.jkiss.dbeaver.cloud.git.toolbars.cloudToolbar">
           <command
                 commandId="org.jkiss.dbeaver.cloud.git.commands.cloudCommand"
                 icon="icons/sample.png"
                 id="org.jkiss.dbeaver.cloud.git.toolbars.cloudCommand"
                 tooltip="Run cloud">
           </command>
           <command
                 commandId="org.jkiss.dbeaver.cloud.git.commands.pushCommand"
                 icon="icons/sample.png"
                 id="org.jkiss.dbeaver.cloud.git.toolbars.pushCommand"
                 tooltip="Push in cloud">
           </command>           
        </toolbar>
     </menuContribution>
  </extension>

</plugin>
